<%= form_for(@user) do |f| %>

<div class="form-group">
    <%= f.label :admin, 'Admin' %><br />
    <%= f.select :admin, options_for_select([['On', true], ['Off', false]]), class:'form-control' %>
</div>

<div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control' %>
</div>

<div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:'form-control' %>
</div>

<div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
</div>
<% end %>

<br>

<%= link_to 'Back', panel_admin_path(current_user) %>